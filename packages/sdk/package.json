{
  "name": "@maci-protocol/sdk",
  "version": "1.0.0",
  "private": false,
  "description": "MACI's SDK",
  "main": "build/ts/index.js",
  "types": "build/ts/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/ts/index.d.ts",
      "default": "./build/ts/index.js"
    },
    "./browser": {
      "types": "./build/ts/browser/index.d.ts",
      "default": "./build/ts/browser/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "browser": [
        "./build/ts/browser/index.d.ts"
      ]
    }
  },
  "bin": {
    "maci-sdk": "./build/ts/index.js"
  },
  "files": [
    "build",
    "CHANGELOG.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cross-env-shell \"copy package.json build\\package.json && if not exist build\\zkeys mkdir build\\zkeys\"",
    "types": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:coverage": "pnpm run test --coverage",
    "docs": "typedoc --plugin typedoc-plugin-markdown --options ./typedoc.json"
  },
  "dependencies": {
    "@maci-protocol/contracts": "workspace:*",
    "@maci-protocol/core": "workspace:*",
    "@maci-protocol/crypto": "workspace:*",
    "@maci-protocol/domainobjs": "workspace:*0",
    "@zk-kit/lean-imt": "^2.2.3",
    "ethers": "^6.14.4",
    "multiformats": "9.9.0",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@types/snarkjs": "^0.7.9",
    "cross-env": "^7.0.3",
    "jest": "^30.0.4",
    "mocha": "^11.7.1",
    "nyc": "^17.1.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}